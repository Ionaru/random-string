{
    "name": "@ionaru/random-string",
    "version": "3.0.0",
    "description": "Generates a random string with a given length",
    "bin": "dist/cli.js",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "clean": "npx -q rimraf dist",
        "build": "npm run clean && tsc --project tsconfig.json",
        "lint": "npm run lint:src && npm run lint:test",
        "lint:src": "eslint --ext ts --max-warnings 0 --ignore-pattern *.spec.ts src",
        "lint:test": "eslint --ext ts --plugin jest --env jest/globals src/*.spec.ts",
        "pretest": "npm run lint",
        "test": "jest src",
        "posttest": "codecov -f coverage/*.json",
        "prepare": "npm run build",
        "preversion": "npm run test"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/*.spec.ts",
            "!src/__mocks__/*.ts"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "keywords": [],
    "author": "Jeroen Akkerman",
    "repository": "github:Ionaru/random-string",
    "license": "MIT",
    "devDependencies": {
        "@ionaru/eslint-config": "^5.0.1",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.3",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "codecov": "^3.8.3",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.25.1",
        "eslint-plugin-jest": "^24.5.2",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-sonarjs": "^0.10.0",
        "eslint-plugin-unicorn": "^36.0.0",
        "jest": "^27.2.5",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.3"
    }
}
